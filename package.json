{
  "name": "ai-bill-analyzer",
  "version": "2.3.0",
  "description": "Upload or capture a utility bill to have AI extract and visualize key information.",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npm run build:server && concurrently \"npm:watch:client\" \"npm:watch:server\" \"npm:server\"",
    "dev:verbose": "LOG_LEVEL=debug npm run dev",
    "watch:client": "esbuild index.tsx --bundle --outfile=client.js --watch --sourcemap --log-level=info --format=esm --external:react --external:react-dom --external:recharts",
    "watch:server": "tsc --watch --preserveWatchOutput",
    "build:client": "esbuild index.tsx --bundle --outfile=client.js --minify --format=esm --external:react --external:react-dom --external:recharts",
    "build:server": "tsc",
    "build": "tsc && npm run build:client",
    "start": "node dist/server.js",
    "server": "nodemon"
  },
  "dependencies": {
    "@google/genai": "^1.17.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "concurrently": "^8.2.2",
    "esbuild": "^0.21.4",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}